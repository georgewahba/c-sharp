@model asp_applicatie.Models.PlaylistSong

@{
    ViewData["Title"] = "Index";
}

<h1>Songs List</h1>
<br />
@if(Model != null)
{
    <H4>PlayList Name: @Model.PlaylistName</H4>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.songs!.First().SongTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.songs!.First().Duration)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model.songs!)
        {
            <tr data-rowid="@song.SongId">
                <td>
                    @Html.DisplayFor(modelItem => song.SongTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => song.Duration)
                </td>
                <td>
                    @if(Model != null)
                    {
                        <a asp-controller="Player" asp-action="Index" asp-route-id="@song.SongId" asp-route-PLId="@Model.PlaylistId">Play</a>
                    }
                    @* <a asp-action="Edit" asp-route-id="@song.PlaylistSongId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@song.PlaylistSongId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@song.PlaylistSongId">Delete</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>
