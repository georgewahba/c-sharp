<!-- AllSongsPage.xaml -->
<Page x:Class="beheerapplicatie.AllSongsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="AllSongsPage">

    <Grid>
        <ListBox ItemsSource="{Binding Songs}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Id, StringFormat='Id: {0}'}" />
                        <TextBlock Text="{Binding Title, StringFormat='Title: {0}'}" />
                        <TextBlock Text="{Binding Artist, StringFormat='Artist: {0}'}" />
                        <TextBlock Text="{Binding Album, StringFormat='Album: {0}'}" />
                        <Separator />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>