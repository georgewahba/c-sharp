<UserControl x:Class="beheerapplicatie.SongPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:beheerapplicatie"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <!-- Display Songs -->
            <ListBox x:Name="songListBox" DisplayMemberPath="Title" Margin="10"/>

            <!-- Add Song -->
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBox x:Name="titleTextBox" Text="Title" Width="150" Margin="5"/>
                <TextBox x:Name="artistTextBox" Text="Artist" Width="150" Margin="5"/>
                <Button Content="Add Song"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
